module punch_palette (
	input logic [2:0] index,
	output logic [3:0] red, green, blue
);

localparam [0:7][11:0] palette = {
	{8'h0, 8'h0, 8'h0},
	{8'h5, 8'h8, 8'hA},
	{8'h0, 8'h0, 8'h0},
	{8'h7, 8'hA, 8'hD},
	{8'h1, 8'h7, 8'h3},
	{8'h2, 8'h3, 8'h3},
	{8'h0, 8'h2, 8'h1},
	{8'hB, 8'hF, 8'hF}
};

assign {red, green, blue} = palette[index];

endmodule
